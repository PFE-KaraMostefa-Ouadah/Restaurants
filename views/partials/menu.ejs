                <img src="images/close_white_24dp.svg" alt="">
                </button>
                <button class="closeMini" style="display:none ;">
                        <img src="images/close_black_24dp.svg" alt="close">
                </button>
                <h1>Bienvenue !</h1>

                <% if(messages.error) { %>
                    <%= messages.error %>
                <% } %>
                <label for="email">Adresse e-mail</label>
                <div class="inp">
                    <input name = "logemail" type="email" placeholder="Email" value = "<%= user.email %>" required>
                </div>
                <label for="mdp">Mot de passe</label>
                <div class="inp">
                    <input name = "logpwd" type="password" placeholder="Mot de passe" value ="<%= user.mdp %>" required>
                </div>
                <button class="action">Se Connecter</button>
                <span class="quest">Vous n'avez pas un compte?</span>
