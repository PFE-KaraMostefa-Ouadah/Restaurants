            <img src="images/close_white_24dp.svg" alt="">
            </button>
            <button class="closeMini" style="display:none ;">
                    <img src="images/close_black_24dp.svg" alt="close">
            </button>
            <h1>Rejoignez-nous !</h1>

            <div class="colLeft">
                <label for="nom">Nom</label>
                <div class="inp">
                        <input id="nom" name="name" value="<%= user.nom %>" type="text" placeholder="Nom" required>
                    </div>
                </div>
                <div class="colRight">
                    <label for="preom">Preom</label>
                    <div class="inp">
                    <input id="preom" type="text" placeholder="Preom" name="prenom" value="<%= user.prenom %>"required>
                    </div>
                </div>
                <label for="email">Adresse e-mail</label>
                <div class="inp">
                    <input  type="email" placeholder="Email" name="email" value="<%= user.email %>"required>
                </div>
                <label for="mdp">Mot de passe</label>
                <div class="inp">
                    <input  type="password" placeholder="Mot de passe" name="mdp" value="<%= user.mdp %>"required>
            </div>
            <button class="action" type="submit">S'inscrire</button>
            <span class="quest">Vous avez déjà un compte</span>
            <button class="cnct"> <span class="bold">Connectez-vous</span> en utilisant votre compte ______.</button>

        </form>

        <form class="n2" action="/" method="POST" style="display: none;" >
